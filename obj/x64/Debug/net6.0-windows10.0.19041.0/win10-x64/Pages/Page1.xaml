                </AutoSuggestBox.KeyboardAccelerators>
            </AutoSuggestBox>
            
            <TreeView
                x:Name="TreeViewNavigation"      
                IsTabStop="False"
            
                Background="{StaticResource AppTitleBar_Grey}"
                                              
                Loaded="TreeViewNavigation_Loaded">
            </TreeView>

        </StackPanel>-->
                
