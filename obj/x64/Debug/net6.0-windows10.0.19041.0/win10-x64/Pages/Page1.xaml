<Page
    x:Class="better_power.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:better_power"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Page.Resources>
        <ResourceDictionary>

            
            <DataTemplate x:Key="SettingTemplate"                                >  
                
                <Grid x:ConnectionId='11' CornerRadius="2" BorderThickness="1" Padding="5" Margin="5" BorderBrush="Gray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:ConnectionId='12'                                                              
                               Grid.Column="0" 
                               Width="400"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"
                               TextWrapping="WrapWholeWords"
                               Margin="10,5,0,5" />
                </Grid>
            </DataTemplate>

            
            <DataTemplate x:Key="ComboBoxTemplate"                                >
                <ComboBox x:ConnectionId='9'     
                    Grid.Column="1" 
                    Width="200"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="0,5,10,5" 
                    
                                                                              
                                                                     
                    />
            </DataTemplate>

            <DataTemplate x:Key="NumberBoxTemplate"                                >
                <NumberBox x:ConnectionId='7'     
                    Grid.Column="1" 
                    Width="200"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="0,5,10,5" 
                    
                                                             
                    />                
            </DataTemplate>


            <DataTemplate x:Key="NavSchemeItem"                               >
                <Grid x:ConnectionId='3' HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:ConnectionId='4'                            />
                    <TextBlock x:ConnectionId='5' x:Name="ActiveText" 
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                                                                            
                               FontWeight="Bold" 
                               Foreground="MediumSpringGreen"/>
                </Grid>
            </DataTemplate>
  
                
        </ResourceDictionary>            
    </Page.Resources>

    

    <Grid x:ConnectionId='13'                          >
                  
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Background="{StaticResource AppPageBackground}"/>


        <Grid x:ConnectionId='14' x:Name="AppTitleBar" 
              Margin="0,0,120,0" 
              Grid.Row="0" 
              Background="{StaticResource AppTitleBar_Grey}" >
            
            <Image Source="C:\Users\Admin\source\repos\better_power\Assets\power_icon.png"
                HorizontalAlignment="Left" 
                Width="30" Height="30"
                Margin="8,0"/>
            
            <TextBlock x:ConnectionId='21' x:Name="AppTitleTextBlock" Text="Better Power"
                TextWrapping="NoWrap"                       
                Style="{StaticResource CaptionTextBlockStyle}" 
                VerticalAlignment="Center"
                Margin="46,0,0,0"/>
        </Grid>


        <NavigationView x:ConnectionId='15'
            x:Name="SchemeNavigationView"             
            Grid.Row="1"
            PaneDisplayMode="Left"
            
            IsSettingsVisible="True"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            Header=""
            AlwaysShowHeader="False"
            PaneTitle=""
                        
            ExpandedModeThresholdWidth="500"
            SelectionFollowsFocus="Disabled"
            IsTabStop="False"
            IsTitleBarAutoPaddingEnabled="False"
            
            Background="{StaticResource AppTitleBar_Grey}"
                                              
                                                                        
                                                                    
                                                >

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox x:ConnectionId='17'
                    x:Name="SchemeNavigationView_SearchBox"
                    VerticalAlignment="Center"
                    x:FieldModifier="public"
                    PlaceholderText="Search Settings in Active Scheme"
                    QueryIcon="Find"
                                                                                 
                    MinWidth="200"
                    KeyboardAcceleratorPlacementMode="Hidden"
                                                                           >
                    <AutoSuggestBox.KeyboardAccelerators>
                        <KeyboardAccelerator x:ConnectionId='18' Modifiers="Control" Key="F"                         />
                    </AutoSuggestBox.KeyboardAccelerators>
                </AutoSuggestBox>
            </NavigationView.AutoSuggestBox>

            
            <ListView x:ConnectionId='19' x:Name="ListView_main"
                                              
                    Grid.Row="1"                         
                    Padding="0,5,0,5"
                    IsTabStop="False" 
                    SelectionMode="None"
                    IsItemClickEnabled="False">

                <Frame x:ConnectionId='20' x:Name="ContentFrame" />
            </ListView> 

        </NavigationView>

        
        <Frame x:ConnectionId='16' x:Name="RootFrame" />
    </Grid>

   

</Page>

