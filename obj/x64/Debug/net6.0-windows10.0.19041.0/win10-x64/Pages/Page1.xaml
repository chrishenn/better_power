<Page
    x:Class="better_power.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:better_power"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Page.Resources>
        <ResourceDictionary>

            
            <DataTemplate x:Key="SettingTemplate"                                >

                <Grid x:ConnectionId='11' CornerRadius="2" BorderThickness="1" Padding="5" Margin="25,5,25,5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:ConnectionId='12'                                                              
                               Grid.Column="0" 
                               Width="300"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"
                               TextWrapping="WrapWholeWords"
                               Margin="10,5,0,5" 
                               
                                           />
                </Grid>
            </DataTemplate>

            
            <DataTemplate x:Key="ComboBoxTemplate"                                >
                <ComboBox x:ConnectionId='9'     
                    Grid.Column="1" 
                    Width="250"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="0,5,10,5" 
                    
                                                                              
                                                                     
                    
                                />
            </DataTemplate>

            <DataTemplate x:Key="NumberBoxTemplate"                                >
                <NumberBox x:ConnectionId='7'     
                    Grid.Column="1" 
                    Width="250"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="0,5,10,5" 
                    
                                                                                 
                                />                
            </DataTemplate>

            <DataTemplate x:Key="NameBoxTemplate"                               >
                <TextBlock x:ConnectionId='5' 
                        Margin="18"
                        
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" 
                        
                                                                
                                                                              />
            </DataTemplate>

            <DataTemplate x:Key="SchemeActiveBoxTemplate"                               >
                <Grid x:ConnectionId='3' 
                        CornerRadius="2" BorderThickness="2" Padding="0" Margin="10" BorderBrush="MediumSpringGreen" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                                                                            >
                    <TextBlock  
                            Text="Active"
                            Margin="8"                           
                            FontWeight="Bold" 
                            Foreground="MediumSpringGreen" />
                </Grid>
            </DataTemplate>

            
        </ResourceDictionary>            
    </Page.Resources>

    

    <Grid x:ConnectionId='13'                          >
                  
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Background="{StaticResource AppPageBackground}"/>

        <Grid x:ConnectionId='14' x:Name="AppTitleBar" 
              Margin="0,0,120,0" 
              Grid.Row="0" 
              Background="{StaticResource AppTitleBar_Grey}" >
            
            <Image Source="../Assets/Square44x44Logo.altform-unplated_targetsize-48.png"
                HorizontalAlignment="Left" 
                Width="25" Height="25"
                Margin="8,0"/>
            
            <TextBlock x:ConnectionId='19' x:Name="AppTitleTextBlock" Text="Better Power"
                TextWrapping="NoWrap"                       
                Style="{StaticResource CaptionTextBlockStyle}" 
                VerticalAlignment="Center"
                Margin="46,0,0,0"/>
        </Grid>


        <NavigationView x:ConnectionId='15'
            x:Name="SchemeNavigationView"             
            Grid.Row="1"
            PaneDisplayMode="Left"
            
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            Header=""
            AlwaysShowHeader="False"
            PaneTitle=""
                        
            ExpandedModeThresholdWidth="500"
            SelectionFollowsFocus="Disabled"
            IsTabStop="False"
            IsTitleBarAutoPaddingEnabled="False"
            
            Background="{StaticResource AppTitleBar_Grey}"
                                              
                                                                        
                                                                    
                                                >

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox x:ConnectionId='16'
                    x:Name="SearchBox"
                    x:FieldModifier="public"
                    PlaceholderText="Search Settings in Selected Scheme"
                    QueryIcon="Find"
                    MinWidth="100"
                    Margin="10,8,10,0"
                    KeyboardAcceleratorPlacementMode="Hidden"
                                                      >
                    <AutoSuggestBox.KeyboardAccelerators>
                        <KeyboardAccelerator x:ConnectionId='17' Modifiers="Control" Key="F"                         />
                    </AutoSuggestBox.KeyboardAccelerators>
                </AutoSuggestBox>
            </NavigationView.AutoSuggestBox>
            
            <ListView x:ConnectionId='18' x:Name="ListView_main"
                                              
                    Grid.Row="1"                         
                    Padding="0,5,0,5"
                    IsTabStop="False" 
                    SelectionMode="None"
                    IsItemClickEnabled="False">
            </ListView>             
        </NavigationView>

        <!--<ContentDialog 
           x:Name="RenameDialog"
                       
           PrimaryButtonText="Apply"
           DefaultButton="Primary"
            
           CloseButtonText="Cancel"  >
            
            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="../Assets/Square44x44Logo.altform-unplated_targetsize-48.png" 
                               VerticalAlignment="Center"
                               Width="40" Height="40" Margin="20"/>
                        <TextBlock Text="Rename Power Scheme"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>

            <TextBox Name="RenameDialogEditBox"
                        Width="350"
                        MaxHeight="200"
                        Margin="10"
                        TextWrapping="Wrap"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" />
        </ContentDialog>-->

    </Grid>   

</Page>

